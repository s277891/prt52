<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_weight="1"
    android:background="@drawable/innerbg"
    tools:context="com.example.ch_e00587.diabetes2.hypoglycemiadetails">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_weight=".15"
        android:layout_width="match_parent"
        android:layout_height="60dp" android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:id="@+id/borderlayout"
        tools:context="com.example.ch_e00587.diabetes1.home"
        android:background="@drawable/topbg">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:layout_centerVertical="true"
            android:id="@+id/layoutTextView"
            android:textSize="22sp"
            android:text="@string/hypoglycemiatitle"
            android:textColor="#FFFFFF"
            android:gravity="center"
            android:layout_centerInParent="true"/>
    </RelativeLayout>

    <TextView android:text="@string/hypoglycemiadetails"
        android:layout_below="@+id/borderlayout"
        android:layout_width="wrap_content"
        android:paddingLeft="10dp"
        android:id="@+id/txtvw"
        android:layout_height="wrap_content" />
    <!--    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Manage Diabetes"
            android:background="@drawable/submitbtn_bg"
            android:textColor="#FFFFFF"
            android:id="@+id/button_diabetes"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="15dp"
            android:layout_centerHorizontal="true" />-->
</RelativeLayout>
